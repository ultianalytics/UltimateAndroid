<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res/com.summithillsoftware.ultimate">
    
<!--

	Current gradient scale (for 5 factors):
	For each factor start with a value and end with the value +4
    	
	1 #B2B266
	2 #A2A259
	3 #92924C
	4 #82823F
	5 #727233
	6 #626226
	7 #525219
	8 #42420C
	9 #333300 
    
    http://www.perbang.dk/rgbgradient/ 
    
-->

     <item android:state_enabled="false">
         <shape android:shape="rectangle"  >
             <solid  android:color="@android:color/transparent" />       
         </shape>
     </item>   
     
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#666619" />
             <gradient  android:angle="-90"  android:startColor="#CCCC7F" android:endColor="#99993F"  />            
         </shape>
     </item>     
    
	 <!-- Player HAS changed state -->
    <item app:playing_time_factor0="true" app:state_changed="true">
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="6dip" android:color="#727226" />
             <gradient  android:angle="-90"  android:startColor="#B2B266" android:endColor="#7F7F33" />            
         </shape>
     </item>  	 
     <item app:playing_time_factor1="true" app:state_changed="true">
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="6dip" android:color="#656519" />
             <gradient  android:angle="-90"  android:startColor="#A5A559" android:endColor="#727226" />            
         </shape>
     </item>
     <item app:playing_time_factor2="true" app:state_changed="true">
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="6dip" android:color="#58580C" />
             <gradient  android:angle="-90"  android:startColor="#98984C" android:endColor="#656519" />            
         </shape>
     </item>
     <item app:playing_time_factor3="true" app:state_changed="true">
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="6dip" android:color="#4C4C00" />
             <gradient  android:angle="-90"  android:startColor="#8B8B3F" android:endColor="#58580C" />            
         </shape>
     </item>
     <item app:playing_time_factor4="true" app:state_changed="true">
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="6dip" android:color="#333300" />
             <gradient  android:angle="-90"  android:startColor="#7F7F33" android:endColor="#4C4C00" />            
         </shape>
     </item> 
  
     
    <!-- Player has NOT changed state -->
    <item app:playing_time_factor0="true">
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#666619" />
             <gradient  android:angle="-90"  android:startColor="#B2B266" android:endColor="#7F7F33" />            
         </shape>
     </item>  	 
     <item app:playing_time_factor1="true">
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#666619" />
             <gradient  android:angle="-90"  android:startColor="#A5A559" android:endColor="#727226" />            
         </shape>
     </item>
     <item app:playing_time_factor2="true">
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#666619" />
             <gradient  android:angle="-90"  android:startColor="#98984C" android:endColor="#656519" />            
         </shape>
     </item>
     <item app:playing_time_factor3="true">
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#666619" />
             <gradient  android:angle="-90"  android:startColor="#8B8B3F" android:endColor="#58580C" />            
         </shape>
     </item>
     <item app:playing_time_factor4="true">
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#666619" />
             <gradient  android:angle="-90"  android:startColor="#7F7F33" android:endColor="#4C4C00" />            
         </shape>
     </item>    


</selector>
