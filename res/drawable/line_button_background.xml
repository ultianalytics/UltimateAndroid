<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res/com.summithillsoftware.ultimate">
    
     <item android:state_enabled="false">
         <shape android:shape="rectangle"  >
             <solid  android:color="@android:color/transparent" />       
         </shape>
     </item>   
     
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#666619" />
             <gradient  android:angle="-90"  android:startColor="#CCCC7F" android:endColor="#99993F"  />            
         </shape>
     </item>     
    
	 <!-- Player HAS changed state -->
    <item app:playing_time_factor0="true" app:state_changed="true">
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="6dip" android:color="#666619" />
             <gradient  android:angle="-90"  android:startColor="#CCCC7F" android:endColor="#C1C172" />            
         </shape>
     </item>  	 
