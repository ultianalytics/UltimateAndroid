<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res/com.summithillsoftware.ultimate">
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#dddddd" />
             <gradient  android:angle="-90"  android:startColor="#ffffff" android:endColor="#cccccc"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#dddddd" />
             <solid  android:color="#eeeeee"/>       
         </shape>
     </item>
     <item app:state_changed="true">
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="6dip" android:color="#dddddd" />
             <gradient  android:angle="-90"  android:startColor="#ffffff" android:endColor="#cccccc" />            
         </shape>
     </item>
    <item android:state_enabled="false">
         <shape android:shape="rectangle"  >
             <solid  android:color="@android:color/transparent" />       
         </shape>
     </item>       
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#dddddd" />
             <gradient  android:angle="-90"  android:startColor="#ffffff" android:endColor="#cccccc" />            
         </shape>
     </item>
</selector>
