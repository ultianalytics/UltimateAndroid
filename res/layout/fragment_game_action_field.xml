<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/playerFragments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>
    
 	<com.summithillsoftware.ultimate.ui.game.GameActionButton
        android:id="@+id/throwawayButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/buttonGameAction"
        android:padding="6dp"
        android:maxLines="50"
        android:text="@string/button_action_throwaway" />
    
     <com.summithillsoftware.ultimate.ui.game.GameActionButton
        android:id="@+id/opponentGoalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="6dp"
        android:maxLines="2"        
        style="@style/buttonGameAction"
        android:text="@string/button_action_opponent_goal" />

     <TextView
         android:id="@+id/pickInitialPlayerInstructionsTextView"
         android:textSize="16sp"
         android:textColor="@color/Orange"
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:layout_margin="10dp"
         android:text="@string/label_game_action_pick_initial_player" />
	
</LinearLayout>
