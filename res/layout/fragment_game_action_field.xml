<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/playerFragments"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    </LinearLayout>
    
 	<com.summithillsoftware.ultimate.ui.game.GameActionButton
        android:id="@+id/throwawayButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/buttonGameAction"
        android:padding="6dp"
        android:text="@string/button_action_throwaway" />
    
     <com.summithillsoftware.ultimate.ui.game.GameActionButton
        android:id="@+id/opponentGoalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="6dp"
        style="@style/buttonGameAction"
        android:text="@string/button_action_opponent_goal" />  
	
</LinearLayout>
