<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/playerFragments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:orientation="vertical" >
    </LinearLayout>

    <com.summithillsoftware.ultimate.ui.game.GameActionButton
        android:id="@+id/throwawayButton"
        style="@style/buttonGameAction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="14"
        android:maxLines="50"
        android:padding="6dp"
        android:text="@string/button_action_throwaway" />
    
    <com.summithillsoftware.ultimate.ui.game.GameActionButton
        android:id="@+id/opponentThrowawayButton"
        style="@style/buttonGameAction"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="30"
        android:maxLines="3"
        android:padding="2dp"
        android:text="@string/button_action_opponent_throwaway" />    

    <com.summithillsoftware.ultimate.ui.game.GameActionButton
        android:id="@+id/opponentGoalButton"
        style="@style/buttonGameAction"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="30"
        android:maxLines="2"
        android:padding="2dp"
        android:text="@string/button_action_opponent_goal" />

    <TextView
        android:id="@+id/pickInitialPlayerInstructionsTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:text="@string/label_game_action_pick_initial_player"
        android:textColor="@color/Orange"
        android:textSize="@dimen/game_action_initiator_instructions_text_size" />

    <Space
        android:id="@+id/defenseRightFiller"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20" />

</LinearLayout>