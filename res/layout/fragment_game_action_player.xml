<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <com.summithillsoftware.ultimate.ui.game.GameActionInitiatorPlayerButton
        android:id="@+id/initiatorPlayerButton"
        style="@style/buttonGameActionInitiatorPlayer"
        android:layout_width="0dp"
        android:layout_weight="30"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:text="@string/button_action_unknown_player" />

    <ImageView
        android:id="@+id/passingDirectionArrow"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        android:contentDescription="@string/image_description"
        android:src="@drawable/arrow_pass_direction" />

    <com.summithillsoftware.ultimate.ui.game.GameActionButton
        android:id="@+id/catchButton"
        style="@style/buttonGameAction"
        android:layout_width="0dp"
        android:layout_weight="20"        
        android:layout_height="wrap_content"
        android:text="@string/button_action_catch" />

    <com.summithillsoftware.ultimate.ui.game.GameActionButton
        android:id="@+id/dropButton"
        style="@style/buttonGameAction"
        android:layout_width="0dp"
        android:layout_weight="20"        
        android:layout_height="wrap_content"
        android:text="@string/button_action_drop" />

    <com.summithillsoftware.ultimate.ui.game.GameActionButton
        android:id="@+id/goalButton"
        style="@style/buttonGameAction"
        android:layout_width="0dp"
        android:layout_weight="20"        
        android:layout_height="wrap_content"
        android:text="@string/button_action_goal" />

    <com.summithillsoftware.ultimate.ui.game.GameActionButton
        android:id="@+id/pullButton"
        style="@style/buttonGameAction"
        android:layout_width="0dp"
        android:layout_weight="20"        
        android:layout_height="wrap_content"
        android:text="@string/button_action_pull"
        android:visibility="invisible" />

    <com.summithillsoftware.ultimate.ui.game.GameActionButton
        android:id="@+id/deButton"
        style="@style/buttonGameAction"
        android:layout_width="0dp"
        android:layout_weight="20"
        android:layout_height="wrap_content"
        android:text="@string/button_action_de"
        android:visibility="invisible" />

</LinearLayout>