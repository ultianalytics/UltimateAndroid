<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lineFieldPlayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_line_field"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Beige"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_last_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_line_last_oline" />

        <Button
            android:id="@+id/substitution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_line_substitution" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_line_clear" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lineBenchPlayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView
            android:id="@+id/label_bench"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_line_bench"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

</LinearLayout>
