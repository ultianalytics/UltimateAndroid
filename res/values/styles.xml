<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.Base.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="FormLabel" parent="@android:style/TextAppearance.Medium">
		<item name="android:textSize">@dimen/form_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/ultimate_form_label</item>
    </style>
    
    <style name="FormData" parent="@android:style/TextAppearance.Medium">
		<item name="android:textSize">@dimen/form_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/ultimate_form_data</item>
    </style>
    
    <style name="FormCellButton" parent="@android:style/Widget.Button">
		<item name="android:background">@drawable/form_cell_button_background</item>
		<item name="android:textSize">@dimen/form_text_size</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">left</item>
		<item name="android:textColor">@color/ultimate_form_label</item>        
    </style>

    <style name="buttonLinePlayer" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/line_button_background</item>
        <item name="android:padding">10dip</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="buttonLineAction" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/line_selection_action_button_background</item>
        <item name="android:padding">10dip</item>
    </style>
    
    <style name="buttonUndo" parent="@android:style/Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/undo_button_background</item>
        <item name="android:padding">4dip</item>
    </style>
    
    <style name="standardButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/standard_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/standard_button_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">6dp</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="redButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/standard_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/undo_button_background</item>
        <item name="android:padding">6dp</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="buttonGameAction" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/game_action_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/standard_button_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">2dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">@dimen/game_action_button_height</item>
        <item name="android:layout_margin">@dimen/game_action_button_margin</item>
    </style>
    
    <style name="buttonGameActionInitiatorPlayer" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/game_action_initiator_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/game_action_initiator_player_button_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_height">@dimen/game_action_button_height</item>
        <item name="android:layout_margin">@dimen/game_action_button_margin</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="buttonStatType" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/standard_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/statistics_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/standard_button_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">6dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

</resources>